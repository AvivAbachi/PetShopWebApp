<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/png" href="~/assets/favicon.png" />
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	@*<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>*@
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
	<title>@ViewBag.Title</title>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg bg-light fixed-top">
			<div class="container-fluid">
				<a asp-controller="Home" asp-action="Index" class="navbar-brand">
					<img src="~/assets/logo_sm.png" alt="Pets Shop Logo" width="64" class="d-inline-block align-text-top" />
				</a>
				<button class="navbar-toggler border-0" data-bs-toggle="collapse" data-bs-target="#menu" aria-controls="menu" aria-expanded="false" aria-label="Toggle navigation">
					<i class="fa-solid fa-bars"></i>
				</button>
				<div class="collapse navbar-collapse" id="menu">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a asp-controller="Home" asp-action="Index" class="nav-link @(ViewBag.Page == "Home" ? "active":"")">
								Home
							</a>
						</li>
						<li class="nav-item">
							<a asp-controller="Home" asp-action="Category" class="nav-link @(ViewBag.Page == "Category" ? "active":"")">
								Category
							</a>
						</li>
						<li class="nav-item">
							<a asp-controller="Admin" asp-action="Index" class="nav-link @(ViewBag.Page == "Admin" ? "active":"")">
								Admin
							</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="page">
		@RenderBody()
	</div>
	<script src="~/js/site.js"></script>
	<script src="~/lib/fontawesome/dist/fontawesome.mini.js" ></script>
</body>
</html>
