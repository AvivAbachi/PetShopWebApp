@model IEnumerable<PetShopWebApp.Models.Animal>

<table class="table table-striped table-borderless">
	<thead>
		<tr class="d-lg-table-row d-none">
			<th>Portrait</th>
			<th>Name</th>
			<th>Age</th>
			<th>Category</th>
			<th>Description</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var pet in Model)
		{
			<tr id="pet_@pet.AnimalId" class="d-lg-table-row mb-lg-0 d-flex flex-column mb-5">
				<td>
					<a asp-controller="Home" asp-action="Animal" asp-route-id="@pet.AnimalId">
						<img src="@pet.PictureURL" width="200" class="rounded-3 m-lg-1">
					</a>
				</td>
				<td>@pet.Name</td>
				<td>@pet.Age</td>
				<td>@pet.Category!.Name</td>
				<td>@pet.Description</td>
				<td class="p-3">
					<a asp-controller="Home" asp-action="Animal" asp-route-id="@pet.AnimalId" class="btn btn-primary d-block">Details</a>
					@if ((bool)ViewData["isAdmin"]!)
					{
						<a asp-controller="Admin" asp-action="EditAnimal" asp-route-id="@pet.AnimalId" class="btn btn-success d-block mt-3">Edit</a>
						<a data-id="@pet.AnimalId" class="btn btn-danger btn-delete d-block mt-3">Remove</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>
