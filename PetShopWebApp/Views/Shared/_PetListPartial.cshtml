@model IEnumerable<PetShopWebApp.Models.Animal>

<table class="table table-striped table-borderless">
	<thead>
		<tr class="d-lg-table-row d-none">
			<th>Portrait</th>
			<th>Name</th>
			<th>Age</th>
			<th>Category</th>
			<th>Description</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr class="d-lg-table-row mb-lg-0 d-flex flex-column mb-5">
				<td>
					<a asp-controller="Home" asp-action="Animal" asp-route-id="@item.AnimalId">
						<img src="@item.PictureURL" width="200" class="rounded-3 m-lg-1">
					</a>
				</td>
				<td>@item.Name </td>
				<td>@item.Age </td>
				<td>@item.Category!.Name </td>
				<td>@item.Description </td>
				<td class="px-2">
					<a asp-controller="Home" asp-action="Animal" asp-route-id="@item.AnimalId" class="btn btn-primary d-block">Details</a>
					@if ((bool)ViewData["isAdmin"]!)
					{
						<a asp-controller="Admin" asp-action="EditAnimal" asp-route-animal="@item" class="btn btn-success d-block mt-2">Edit</a>
						<a asp-controller="Admin" asp-action="DeleteAnimal" asp-route-id="@item.AnimalId" class="btn btn-danger d-block mt-2">Delete</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>
