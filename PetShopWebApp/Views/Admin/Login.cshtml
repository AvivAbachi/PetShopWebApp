@{
	ViewBag.Title = "Admin - Pet Shop";
}

@section navbar{
	<li class="nav-item">
		<a asp-controller="Home" asp-action="Index" class="nav-link ">Home</a>
	</li>
	<li class="nav-item">
		<a asp-controller="Home" asp-action="Category" class="nav-link">Category</a>
	</li>
	<li class="nav-item">
		<a asp-controller="Admin" asp-action="Index" class="nav-link active">Login</a>
	</li>
}

	<div class="form-signin text-center w-100 mx-auto py-5">
		<form method="post">
			<img class="d-block mx-auto" src="~/logo_original.png" alt="" width="256">
			<h1 class="h3 mb-4 fw-normal">Please login</h1>
			<div class="form-floating">
				<input name="UserName" class="form-control" id="username" placeholder="Username" >
				<label for="username">Username</label>
			</div>
			<div class="form-floating">
				<input name="Password" type="password" class="form-control" id="password" placeholder="Password">
				<label for="password">Password</label>
			</div>
			<button class="w-100 btn btn-lg btn-primary mt-4" type="submit">Login</button>
		</form>
	</div>
